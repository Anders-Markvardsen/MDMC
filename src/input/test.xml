<job>
<!--
  <structure filename="../tests/recover_CCL4_FQ/CCl4_rmc++.xml"> </structure>
-->
  <structure>
    <title>Liquid Ar</title>
    <density units="atom/AA3" val="0.8" />
    <ar nx="8" ny ="8" nz="8" /> 
  </structure>
  
  <constraints>
    <fnc-constraint filename="fnc.xml"></fnc-constraint>
    <cutoff-constraint />
    <coordination-constraint />
    <soft-cutoff-constraint /> 
  </constraints>
  
  
  <fom>
    <pdf-fom filename="somefile" />
    <sf-fom filename="somefile" />
    <average-coor-fom />
    <coordination-fom />
  </fom>
  
  <gpe>
    <lj-potential num-variable="2">
      <sigma units="AA" val="1.0" />
      <epsilon units="KJ/mole" val="1.0" />
    </lj-potential>
    <!-- <lookup-data-potential /> -->
  </gpe>
  
  <control-object name="md_control">

    <step-limit number="8000" />
    <average-over-this-many-step number="2000" />
    
    <temperature units="Kelvin" val="1.0" />
    <time-step units="10e-13s" val="0.005" />
    
    <use-near-neighbour-method>
      <r-cut units="AA" val="1.12246204831" />
      <delta-r units="AA" val="0.4" />      
    </use-near-neighbour-method>
    
    <perform-initial-temperature-calibration>
      <total-step number="4000" />
      <adjust-temp-at-interval number="200" />
    </perform-initial-temperature-calibration>

  </control-object>

</job>
