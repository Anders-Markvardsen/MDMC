<job>
<!--
  <structure filename="../tests/recover_CCL4_FQ/CCl4_rmc++.xml"> </structure>
-->
  <structure>
    <title>Liquid Ar</title>
    <density units="atom/AA3" value="1" />
    <ar nx="2" ny ="2" nz="2" /> 
  </structure>
  
  <constraints>
    <fnc-constraint filename="fnc.xml"></fnc-constraint>
    <cutoff-constraint />
    <coordination-constraint />
    <soft-cutoff-constraint /> 
  </constraints>
  
  
  <fom>
    <pdf-fom filename="somefile" />
    <sf-fom filename="somefile" />
    <average-coor-fom />
    <coordination-fom />
  </fom>
  
  <gpe>
    <lj-potential num-variable="2">
      <sigma units="AA" val="3.4" />
      <epsilon units="KJ/mole" val="0.998" />
    </lj-potential>
    <!-- <lookup-data-potential /> -->
  </gpe>
  
  <control-object name="moldyn_control">
    <step-average number="200" />
    <step-equilibrium number="2000" />
    <step-limit number="20000" />
    <delta-t units="10^-15">1.0</delta-t>
    <mass units="amu" />
    <length units="AA" />
    <temperature units="kelvin">120</temperature>
  </control-object>

</job>
