<job>
<!--
  <structure filename="../tests/recover_CCL4_FQ/CCl4_rmc++.xml"> </structure>
-->

  <!-- When the attribute what-init-structure-to-build is defined the 
       x-direction box edge length is:
              nx*(density[atom/AA3])^(-1/3)           when simple-cubic
              4^1/3 * nx*(density[atom/AA3])^(-1/3)   when fcc 
              
       Notice the density of liquid Ar at P=1atm and T=85K is 
       rho = 1.41g/cm^3 = 0.02125 atoms/AA3        
       -->
  <structure what-init-structure-to-build="fcc">
    <title>Liquid Ar</title>
<!--    <density units="atom/AA3" val="0.020265" />-->
    <density units="atom/AA3" val="0.0176" />    
    <number-of-unit-cells nx="7" ny ="7" nz="7" />
  </structure>
  
  <!-- To not use nearest neighbour method include element below.
      Notice Rapaport recomment delta-r values around 1.2AA.
      Further if r-cut+delta-r > 'smallest box edge'/2 then
      set r-cut = 'smallest box edge'/2 - delta-r 
      -->    
  <use-near-neighbour-method>
    <r-cut units="AA" val="7.491" />   
    <delta-r units="AA" val="1.364" />            
  </use-near-neighbour-method>  
  
  
  <constraints>
    <fnc-constraint filename="fnc.xml"></fnc-constraint>
    <cutoff-constraint />
    <coordination-constraint />
    <soft-cutoff-constraint /> 
  </constraints>
  
  
  <gpe>
    <lj-potential>
      <sigma units="AA" val="3.36"             fixed="no" min="1.0" max="6.0" max-move="0.1" />
      <epsilon units="KJ/mole" val="1.0243"  fixed="no" min="0.2" max="5.0" max-move="0.1" />

      <!-- Ag values are: sigma units="AA" val="3.405"
                          epsilon units="KJ/mole" val="0.9960172"
           -->

      <!-- you can argue whether r-cut here is a property of this potentially,
           but for now you can optionally specify an r-cut value here, which
           simply put the potential to zero for all r values higher than r-cut 
           -->
      <r-cut units="AA" val="100.0" />  
    </lj-potential>
    <!-- <lookup-data-potential /> -->
  </gpe>
  
  <control-object name="md_control_time_corr">
  
    <temperature units="Kelvin" val="120.0" />
    <time-step units="10e-13s" val="0.1075" />

    
    <q-values>
      <q start="0.4" step="0.2" n-step="10" />
    </q-values>
    <omega-values>
      <omega start="0.0" step="0.02" n-step="10" />
    </omega-values>    
    
    <!-- Specify stuff with is done only once
    
         The average-over attribute of the total-steps-initial-equilibration
         element specifies how many steps to average over when calculating
         MD properties 
         -->
    <total-steps-initial-equilibration number="50000" average-over="1000" />
    <perform-initial-temperature-calibration>
      <total-step-temp-cali number="20000" />
      <adjust-temp-at-interval number="1000" />
    </perform-initial-temperature-calibration>
    
    <time-correlation> 
      <n-g-r-t-to-average-over number="2" />  <!-- Number of g(r,t) to average over -->
      <n-md-step-between-buffers number="10" /> <!-- how long between the calculated g(r,t) to make stat. independent -->      
      <md-per-time-bin number="1" />  <!-- Robert said nearly always set to 1, although it may be used
                                           to reduce the number of output t-points when outputting g(r,t)
                                           for plotting -->
      <n-time-bin number="100" />
    </time-correlation>
        
    
    <calculate-rdf>
      <cal-rdf-at-interval number="50" />
      <average-over-this-many-rdf number="20" />  
      
      <r-max units="AA" val="10000.0" />
      <bin-length units="AA" val="0.2" /> 
    </calculate-rdf>    
        
  </control-object>

</job>
