<job>

  <!-- Define structure from file -->
  <!--
  <structure filename="some_structure.xml"> </structure>
  -->

  <!-- Alternatively build structure in code -->
  <structure what-init-structure-to-build="simple-cubic">
    <title>Liquid Ar</title>
    <density units="atom/AA3" val="0.020265" />
    <number-of-unit-cells nx="6" ny ="6" nz="6" />
  </structure>
  
  <!-- Optionally use nearest neighbour method in MD simulations -->    
  <use-near-neighbour-method>
    <r-cut units="AA" val="7.491" />   
    <delta-r units="AA" val="1.364" />            
  </use-near-neighbour-method>  
  
  <fom>
    <rdf-fom>
      <rdf-data filename="data/argon/xml_copy_of_robert_Ar.xml" />
      <r-max units="AA" val="10.0" />
      <scale-factor val="1.0" />
      <sigma val="1.0" />
    </rdf-fom>
  </fom>
  
  <gpe>
    <lj-potential>
      <sigma units="AA" val="3.7"             fixed="no" min="1.0" max="6.0" max-move="0.1" />
      <epsilon units="KJ/mole" val="2.0"  fixed="no" min="0.2" max="5.0" max-move="0.1" />

      <!-- you can argue whether r-cut here is a property of this potentially,
           but for now you can optionally specify an r-cut value here, which
           simply put the potential to zero for all r values higher than r-cut 
           -->
      <r-cut units="AA" val="100.0" />  
    </lj-potential>
  </gpe>
  
  <control-object name="mdmc_control">
  
    <temperature units="Kelvin" val="85.0" />
    <time-step units="10e-13s" val="0.1075" />  

    <!-- Controlling the initial MD calibration -->
    <total-steps-initial-equilibration number="8000" average-over="1000" />
    <perform-initial-temperature-calibration>
      <total-step-temp-cali number="4000" />
      <adjust-temp-at-interval number="200" />
    </perform-initial-temperature-calibration>
    
    <mc-steps number="2" /> 
    <temperature-mc val="0.005" />    
    
    <!-- Controlling MD simulations between MC steps -->
    <md-steps-repeated-equilibration number="6000" average-over="1000" />
    <perform-repeated-temperature-calibration>
      <total-step-temp-cali-repeated number="3000" />
      <adjust-temp-at-interval-repeated number="200" />
    </perform-repeated-temperature-calibration>
    
    <calculate-rdf>
      <cal-rdf-at-interval number="50" />
      <average-over-this-many-rdf number="20" />  
      
      <!-- These are only used here when wanting to save g(r) to file -->
      <r-max units="AA" val="20.0" />
      <bin-length units="AA" val="0.1" /> 
    </calculate-rdf>    
        
  </control-object>

</job>
